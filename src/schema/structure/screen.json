{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://webapp.com/schemas/screen",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["screen"]
    },
    "title": {
      "type": "string"
    },
    "styles": {
      "type": "object",
      "properties": {
        "width": { "type": "string" },
        "maxWidth": { "type": "integer" },
        "marginLeft": { "type": "string" },
        "marginRight": { "type": "string" }
      }
    },
    "components": {
      "type": "array",
      "items": {
        "$ref": "https://webapp.com/schemas/component.json"
      }
    }
  },
  "required": ["type", "title", "components"]
}
