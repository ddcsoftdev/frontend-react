{
    "$id": "https://webapp.com/schemas/footer.json",
    "type": "object",
    "properties": {
      "type": {
        "const": "footer"
      },
      "text": {
        "type": "string"
      },
      "links": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "title": { "type": "string" },
            "path": { "type": "string" }
          }
        }
      },
      "styles": {
        "type": "object",
        "properties": {
          "background": { "type": "string" },
          "color": { "type": "string" },
          "padding": { "type": "string" },
          "textAlign": { "type": "string" }
        }
      }
    },
    "required": ["type", "text"]
  }
  