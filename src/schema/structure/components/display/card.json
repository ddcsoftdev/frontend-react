{
    "$id": "https://webapp.com/schemas/card.json",
    "type": "object",
    "properties": {
      "type": {
        "const": "card"
      },
      "title": {
        "type": "string"
      },
      "content": {
        "type": "string"
      },
      "image": {
        "type": "string"
      },
      "actions": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "label": { "type": "string" },
            "action": {
              "type": "object",
              "properties": {
                "type": { "type": "string" },
                "path": { "type": "string" }
              }
            }
          }
        }
      },
      "styles": {
        "type": "object",
        "properties": {
          "padding": { "type": "string" },
          "border": { "type": "string" }
        }
      }
    },
    "required": ["type", "title", "content"]
  }
  