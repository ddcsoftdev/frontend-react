{
    "$id": "https://webapp.com/schemas/input.json",
    "type": "object",
    "properties": {
      "type": {
        "type": "string",
        "enum": ["input"]
      },
      "inputType": {
        "type": "string",
        "enum": ["text", "password", "email", "number", "date", "submit"]
      },
      "title": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "placeholder": {
        "type": "string"
      },
      "required": {
        "type": "boolean"
      },
      "value": {
        "type": "string"
      },
      "validation": {
        "type": "object",
        "properties": {
          "minLength": {
            "type": "integer"
          },
          "maxLength": {
            "type": "integer"
          },
          "pattern": {
            "type": "string"
          }
        },
        "required": ["minLength", "maxLength"]
      },
      "styles": {
        "type": "object",
        "properties": {
          "width": { "type": "string" },
          "padding": { "type": "string" },
          "border": { "type": "string" },
          "borderRadius": { "type": "string" }
        }
      },
      "visibility": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": ["guest", "user", "admin"]
        }
      }
    },
    "required": ["type", "inputType", "name"]
  }
  