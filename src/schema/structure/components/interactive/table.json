{
  "$id": "https://webapp.com/schemas/table.json",
  "type": "object",
  "properties": {
    "type": {
      "const": "table"
    },
    "endpoint": {
      "type": "string"
    },
    "method": {
      "type": "string"
    },
    "columns": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "field": { "type": "string" },
          "type": { "type": "string" },
          "width": { "type": "integer" },
          "filter": { "type": "boolean" },
          "buttons": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": { "type": "string" },
                "icon": { "type": "string" },
                "tooltip": { "type": "string" },
                "action": {
                  "type": "object",
                  "properties": {
                    "type": { "type": "string" },
                    "path": { "type": "string" },
                    "method": { "type": "string" },
                    "endpoint": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "editableFields": {
      "type": "array",
      "items": { "$ref": "https://webapp.com/schemas/input.json" }
    }
  },
  "required": ["type", "endpoint", "method", "columns"]
}
