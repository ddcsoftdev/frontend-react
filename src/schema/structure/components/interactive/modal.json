{
    "$id": "https://webapp.com/schemas/modal.json",
    "type": "object",
    "properties": {
      "type": {
        "type": "string",
        "enum": ["modal"]
      },
      "title": {
        "type": "string"
      },
      "content": {
        "type": "string"
      },
      "actions": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["button"]
            },
            "label": {
              "type": "string"
            },
            "action": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["submit", "close", "redirect", "openDrawer", "toggle"]
                },
                "endpoint": {
                  "type": "string"
                },
                "target": {
                  "type": "string"
                },
                "path": {
                  "type": "string"
                },
                "method": {
                  "type": "string"
                }
              },
              "required": ["type"]
            }
          },
          "required": ["type", "label", "action"]
        }
      },
      "components": {
        "type": "array",
        "items": { "$ref": "https://webapp.com/schemas/components.json" }
      },
      "styles": {
        "type": "object",
        "properties": {
          "width": { "type": "string" },
          "padding": { "type": "string" },
          "background": { "type": "string" },
          "borderRadius": { "type": "string" },
          "boxShadow": { "type": "string" }
        }
      },
      "visibility": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": ["user", "admin", "guest", "editor"]
        },
        "description": "Defines who can see this component. If empty or not specified, visible to all."
      }
    },
    "required": ["type", "title", "content", "actions"]
  }
  